<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppOV.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Color/brush de marca. El valor inicial se sobreescribe en App.xaml.cs -->
            <Color x:Key="BrandPrimaryColor">#153C46</Color>
            <!--<Color x:Key="BrandPrimaryColor">#FF0012</Color>-->
            <SolidColorBrush x:Key="BrandPrimaryBrush"
                       Color="{DynamicResource BrandPrimaryColor}" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
